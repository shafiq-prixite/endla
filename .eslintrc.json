{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"react-app",
		"react-app/jest",
		"airbnb",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": ["error", { "singleQuote": true }],
		"react/jsx-uses-react": ["off"],
		"react/react-in-jsx-scope": ["off"],
		"react/jsx-props-no-spreading": ["warn"],
		"no-shadow": ["off"]
	}
}
